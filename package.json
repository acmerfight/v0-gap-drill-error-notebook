{
  "name": "my-v0-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "ci": "pnpm run ci:check",
    "ci:check": "pnpm run lint && echo '✅ Lint passed' && pnpm run type-check && echo '✅ Type check passed' && pnpm run build && echo '✅ Build completed'",
    "audit:fix": "pnpm audit --fix",
    "outdated": "pnpm outdated",
    "clean": "npx rimraf .next node_modules/.cache",
    "clean:deps": "npx rimraf node_modules pnpm-lock.yaml && pnpm install",
    "health": "pnpm run type-check && pnpm run lint:check && echo '✅ Project health OK'",
    "lint:check": "eslint --max-warnings 0 .",
    "prepare": "husky"
  },
  "engines": {
    "node": "22.x",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache",
      "eslint --max-warnings 0 --cache",
      "bash -c 'rm -rf node_modules/.cache tsconfig.tsbuildinfo .next/cache && npx tsc --noEmit'",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.9",
    "@neondatabase/serverless": "^1.0.1",
    "@radix-ui/react-accordion": "1.2.12",
    "@radix-ui/react-alert-dialog": "1.1.15",
    "@radix-ui/react-aspect-ratio": "1.1.7",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-collapsible": "1.1.12",
    "@radix-ui/react-context-menu": "2.2.16",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-hover-card": "1.1.15",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-menubar": "1.1.16",
    "@radix-ui/react-navigation-menu": "1.2.14",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-progress": "1.1.7",
    "@radix-ui/react-radio-group": "1.3.8",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slider": "1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "1.2.6",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-toast": "1.2.15",
    "@radix-ui/react-toggle": "1.1.10",
    "@radix-ui/react-toggle-group": "1.1.11",
    "@radix-ui/react-tooltip": "1.2.8",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "drizzle-orm": "^0.44.5",
    "embla-carousel-react": "8.6.0",
    "geist": "^1.5.1",
    "input-otp": "1.4.2",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "next-themes": "^0.4.6",
    "picomatch": "^4.0.3",
    "react": "^19",
    "react-day-picker": "9.9.0",
    "react-dom": "^19",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^24.3.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.9",
    "tw-animate-css": "1.3.8",
    "typescript": "^5"
  }
}
